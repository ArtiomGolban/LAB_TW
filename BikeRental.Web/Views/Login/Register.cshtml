@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}
@model BikeRental.Web.Models.UserLogin

<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="text-center my-5">
                </div>
                <div class="card shadow-lg">
                    @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { @class = "needs-validation", @novalidate = "novalidate", @autocomplete = "off", @style = "width: 23rem;" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="card-body p-5">
                            <h1 class="fs-4 card-title fw-bold mb-4">Register</h1>
                            <div class="mb-3">
                                <label class="mb-2 text-muted" for="name">Username</label>
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control form-control-lg" })
                                <div class="invalid-feedback">
                                    Name is required
                                </div>
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label class="mb-2 text-muted" for="email">E-Mail Address</label>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-lg" })
                                <div class="invalid-feedback">
                                    Email is invalid
                                </div>
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label class="mb-2 text-muted" for="password">Password</label>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-lg" })
                                <div class="invalid-feedback">
                                    Password is required
                                </div>
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="align-items-center d-flex">
                                <button type="submit" class="btn btn-primary ms-auto">
                                    Register
                                </button>
                            </div>
                        </div>
                    }
                    <div class="card-footer py-3 border-0">
                        <div class="text-center">
                            Already have an account? <a href="@Url.Action("Index", "Login")" class="text-dark">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
